// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // 로컬 개발 시: 프로젝트 루트의 prisma 폴더 내 dev.db 파일을 사용
  // 배포 시: Docker 컨테이너 내의 특정 경로 (예: /app/prisma/prod.db) 또는 볼륨 마운트 경로
  // 환경 변수를 사용하여 경로를 동적으로 설정하는 것이 좋습니다.
  url      = env("DATABASE_URL")
}

// 모델 정의는 이전 PostgreSQL 예시와 동일하게 유지합니다.
// Topic, Question, AnswerOption 모델들...
model Topic {
  id        String     @id @default(cuid())
  name_ko   String
  name_en   String
  questions Question[]
}

model Question {
  id            String         @id @default(cuid())
  topicId       String
  text_ko       String
  text_en       String
  hint_ko       String
  hint_en       String
  topic         Topic          @relation(fields: [topicId], references: [id])
  answerOptions AnswerOption[]
}

model AnswerOption {
  id            String   @id @default(cuid())
  questionId    String
  text_ko       String
  text_en       String
  rationale_ko  String
  rationale_en  String
  isCorrect     Boolean
  question      Question @relation(fields: [questionId], references: [id])
}