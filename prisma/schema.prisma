// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Topic {
  id        String     @id @default(cuid())
  name_ko   String
  name_en   String
  questions Question[]
  concepts  Concept[]
}

model Concept {
  id        String  @id @default(cuid())
  topicId   String
  name_ko   String
  name_en   String
  topic     Topic   @relation(fields: [topicId], references: [id])

  @@index([topicId])
}

model Question {
  id            String         @id @default(cuid())
  topicId       String
  text_ko       String
  text_en       String
  hint_ko       String
  hint_en       String
  topic         Topic          @relation(fields: [topicId], references: [id])
  answerOptions AnswerOption[]
  feedbacks     Feedback[]
}

model AnswerOption {
  id            String   @id @default(cuid())
  questionId    String
  text_ko       String
  text_en       String
  rationale_ko  String
  rationale_en  String
  isCorrect     Boolean
  question      Question @relation(fields: [questionId], references: [id])
}

model User {
  id           String        @id @default(cuid())
  username     String        @unique
  createdAt    DateTime      @default(now())
  scores       UserScore[]
  quizSessions QuizSession[]
}

model DailyQuestionSet {
  id          String      @id @default(cuid())
  date        DateTime    @unique @db.Date
  questionIds String[]
  createdAt   DateTime    @default(now())
  scores      UserScore[]
}

model UserScore {
  id             String           @id @default(cuid())
  userId         String
  dailySetId     String
  topicId        String?
  score          Int
  correctAnswers Int
  totalQuestions Int
  timeSpent      Int
  completedAt    DateTime         @default(now())

  user           User             @relation(fields: [userId], references: [id])
  dailySet       DailyQuestionSet @relation(fields: [dailySetId], references: [id])

  @@unique([userId, dailySetId])
  @@unique([userId, dailySetId, topicId])
  @@index([dailySetId, score])
}

model QuizSession {
  id           String   @id @default(cuid())
  userId       String
  quizType     String   // 'daily' | 'topic' | 'random'
  topicId      String?
  dailySetId   String?
  solvedCount  Int
  correctCount Int
  timeSpent    Int      // seconds
  completedAt  DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id])

  @@index([userId, completedAt])
  @@index([completedAt])
}

model Feedback {
  id         String   @id @default(cuid())
  content    String
  questionId String?
  category   String?
  userId     String?
  createdAt  DateTime @default(now())

  question   Question? @relation(fields: [questionId], references: [id])

  @@index([questionId])
}
