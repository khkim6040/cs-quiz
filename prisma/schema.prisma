// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Topic {
  id        String     @id @default(cuid())
  name_ko   String
  name_en   String
  questions Question[]
}

model Question {
  id            String         @id @default(cuid())
  topicId       String
  text_ko       String
  text_en       String
  hint_ko       String
  hint_en       String
  topic         Topic          @relation(fields: [topicId], references: [id])
  answerOptions AnswerOption[]
}

model AnswerOption {
  id            String   @id @default(cuid())
  questionId    String
  text_ko       String
  text_en       String
  rationale_ko  String
  rationale_en  String
  isCorrect     Boolean
  question      Question @relation(fields: [questionId], references: [id])
}

model User {
  id        String      @id @default(cuid())
  username  String      @unique
  createdAt DateTime    @default(now())
  scores    UserScore[]
}

model DailyQuestionSet {
  id          String      @id @default(cuid())
  date        DateTime    @unique @db.Date
  questionIds String[]
  createdAt   DateTime    @default(now())
  scores      UserScore[]
}

model UserScore {
  id             String           @id @default(cuid())
  userId         String
  dailySetId     String
  topicId        String?
  score          Int
  correctAnswers Int
  totalQuestions Int
  timeSpent      Int
  completedAt    DateTime         @default(now())

  user           User             @relation(fields: [userId], references: [id])
  dailySet       DailyQuestionSet @relation(fields: [dailySetId], references: [id])

  @@unique([userId, dailySetId])
  @@unique([userId, dailySetId, topicId])
  @@index([dailySetId, score])
}

model Feedback {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
}
